      "/api/service-orders/{serviceOrderId}/chat": {
        "get": {
          "summary": "Get Chat Messages for Service Order",
          "security": [{"bearerAuth": []}],
          "parameters": [
            {
              "name": "serviceOrderId",
              "in": "path",
              "required": true,
              "schema": {
                "type": "integer"
              }
            }
          ],
          "responses": {
            "200": {
              "description": "List of chat messages",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "id": {"type": "integer"},
                        "user_id": {"type": "integer"},
                        "user_type": {"type": "string"},
                        "content": {"type": "string"},
                        "created_at": {"type": "string", "format": "date-time"}
