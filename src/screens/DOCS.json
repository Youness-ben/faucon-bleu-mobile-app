              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "vehicle_id": {"type": "integer"},
                    "service_id": {"type": "integer"},
                    "scheduled_at": {"type": "string", "format": "date-time"}
                  }
                }
              }
            }
          },
          "responses": {
            "201": {
              "description": "Service order created successfully"
            }
          }
        }
      },
      "/api/service-orders/{id}": {
        "get": {
          "summary": "Get Service Order Details",
          "security": [{"bearerAuth": []}],
          "parameters": [
            {
              "name": "id",
              "in": "path",
              "required": true,
              "schema": {
                "type": "integer"
              }
            }
