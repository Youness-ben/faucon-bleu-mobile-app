          "responses": {
            "200": {
              "description": "List of client service prices",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "id": {"type": "integer"},
                        "service_id": {"type": "integer"},
                        "price": {"type": "number"}
                      }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "/api/service-orders": {
        "get": {
          "summary": "List Service Orders",
          "security": [{"bearerAuth": []}],
          "responses": {
            "200": {
              "description": "List of service orders",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "id": {"type": "integer"},
                        "vehicle_id": {"type": "integer"},
                        "service_id": {"type": "integer"},
                        "status": {"type": "string"},
                        "scheduled_at": {"type": "string", "format": "date-time"}
