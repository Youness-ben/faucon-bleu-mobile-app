{
    "openapi": "3.0.0",
    "info": {
      "title": "FAUCON BLEU MOBILE APP API",
      "version": "1.0.0",
      "description": "API documentation for the FAUCON BLEU MOBILE APP (Client and Vehicle users)"
    },
    "paths": {
      "/api/login/client": {
        "post": {
          "summary": "Client Login",
          "requestBody": {
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "email": {"type": "string"},
                    "password": {"type": "string"}
                  }
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "Successful login",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "token": {"type": "string"},
                      "user": {"type": "object"}
                    }
                  }
                }
              }
            }
          }
        }
      },
      "/api/login/vehicle": {
        "post": {
          "summary": "Vehicle Login",
          "requestBody": {
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "license_plate": {"type": "string"},
                    "password": {"type": "string"}
                  }
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "Successful login",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "token": {"type": "string"},
                      "vehicle": {"type": "object"}
                    }
                  }
                }
              }
            }
          }
        }
      },
      "/api/logout": {
        "post": {
          "summary": "Logout",
          "security": [{"bearerAuth": []}],
          "responses": {
            "200": {
              "description": "Successful logout"
            }
          }
        }
      },
      "/api/client/profile": {
        "get": {
          "summary": "Get Client Profile",
          "security": [{"bearerAuth": []}],
          "responses": {
            "200": {
              "description": "Client profile",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "id": {"type": "integer"},
                      "name": {"type": "string"},
                      "email": {"type": "string"},
                      "phone": {"type": "string"}
                    }
                  }
                }
              }
            }
          }
        },
        "put": {
          "summary": "Update Client Profile",
          "security": [{"bearerAuth": []}],
          "requestBody": {
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "name": {"type": "string"},
                    "email": {"type": "string"},
                    "phone": {"type": "string"}
                  }
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "Updated client profile"
            }
          }
        }
      },
      "/api/client/password": {
        "put": {
          "summary": "Update Client Password",
          "security": [{"bearerAuth": []}],
          "requestBody": {
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "current_password": {"type": "string"},
                    "new_password": {"type": "string"},
                    "new_password_confirmation": {"type": "string"}
                  }
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "Password updated successfully"
            }
          }
        }
      },
      "/api/vehicles": {
        "get": {
          "summary": "List Client's Vehicles",
          "security": [{"bearerAuth": []}],
          "responses": {
            "200": {
              "description": "List of vehicles",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "id": {"type": "integer"},
                        "name": {"type": "string"},
                        "license_plate": {"type": "string"},
                        "brand": {"type": "string"},
                        "model": {"type": "string"},
                        "year": {"type": "integer"}
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "post": {
          "summary": "Create New Vehicle",
          "security": [{"bearerAuth": []}],
          "requestBody": {
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "name": {"type": "string"},
                    "license_plate": {"type": "string"},
                    "brand_id": {"type": "integer"},
                    "model": {"type": "string"},
                    "year": {"type": "integer"}
                  }
                }
              }
            }
          },
          "responses": {
            "201": {
              "description": "Vehicle created successfully"
            }
          }
        }
      },
      "/api/vehicles/{id}": {
        "get": {
          "summary": "Get Vehicle Details",
          "security": [{"bearerAuth": []}],
          "parameters": [
            {
              "name": "id",
              "in": "path",
              "required": true,
              "schema": {
                "type": "integer"
              }
            }
          ],
          "responses": {
            "200": {
              "description": "Vehicle details"
            }
          }
        },
        "put": {
          "summary": "Update Vehicle",
          "security": [{"bearerAuth": []}],
          "parameters": [
            {
              "name": "id",
              "in": "path",
              "required": true,
              "schema": {
                "type": "integer"
              }
            }
          ],
          "requestBody": {
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "name": {"type": "string"},
                    "brand_id": {"type": "integer"},
                    "model": {"type": "string"},
                    "year": {"type": "integer"}
                  }
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "Vehicle updated successfully"
            }
          }
        },
        "delete": {
          "summary": "Delete Vehicle",
          "security": [{"bearerAuth": []}],
          "parameters": [
            {
              "name": "id",
              "in": "path",
              "required": true,
              "schema": {
                "type": "integer"
              }
            }
          ],
          "responses": {
            "204": {
              "description": "Vehicle deleted successfully"
            }
          }
        }
      },
      "/api/services": {
        "get": {
          "summary": "List Services",
          "security": [{"bearerAuth": []}],
          "responses": {
            "200": {
              "description": "List of services",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "id": {"type": "integer"},
